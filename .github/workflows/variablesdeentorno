  saludo_trabajo:
    se ejecuta en: ubuntu-latest
    entorno:
      Saludo: Hola
    pasos:
      - nombre: "Di Hola Mona, es lunes"
        si: ${{ env.DAY_OF_WEEK == 'lunes' }}
        run: echo "$Saludo $First_Name. Â¡Hoy es $DAY_OF_WEEK!"
        entorno:
          Nombre: Mona
